@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h4>Add a new recipe</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)

    @Html.LabelFor(model => model.IngredientList)
    @Html.TextBoxFor(model => model.IngredientList)

    @Html.LabelFor(model => model.Instruction)
    @Html.TextBoxFor(model => model.Instruction)

    @Html.Label("Select Tag")
    @Html.DropDownList("TagId")

    <input type="submit" value="Add new recipe" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all recipes", "Index")</p>