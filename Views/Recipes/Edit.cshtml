@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h2>Edit</h2>

<h4>Edit this recipe: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.RecipeId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)

    @Html.LabelFor(model => model.IngredientList)
    @Html.EditorFor(model => model.IngredientList)

    @Html.LabelFor(model => model.Instruction)
    @Html.EditorFor(model => model.Instruction)

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>